<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <BorderPane fx:id="topBarContainerTextInterview" BorderPane.alignment="CENTER">
            <center>
                <BorderPane fx:id="headerGrid">
                    <center>
                        <Text fx:id="textInterviewTitle" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                            <font><Font size="22.0" /></font>
                     <BorderPane.margin>
                        <Insets bottom="20.0" />
                     </BorderPane.margin>
                        </Text>
                    </center>
                    <bottom>
                        <Label fx:id="textInterviewComment" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    </bottom>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
                </BorderPane>
            </center>
            <left>
                <ImageView fx:id="buttonCollapseInterviewPanel"
                           fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER"
                >
                    <image>
                        <Image url="/images/closeMenuBlack.png" />
                    </image>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </ImageView>
            </left>
        </BorderPane>
    </top>
    <center>
        <StackPane fx:id="stackPaneInterview">
            <!-- Here is inserted InterviewTextArea.fxml -->
        </StackPane>
    </center>
</BorderPane>
